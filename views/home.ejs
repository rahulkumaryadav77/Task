<body class="bg-dark">

  <style>
    h5 {
      color: rgb(255, 255, 255);
    }

    p {
      color: rgb(255, 255, 255);
    }

    th {
      color: rgb(255, 255, 255);
    }

    .table {
      border-radius: 800px;
    }
  </style>
  <nav class="navbar navbar-light bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">
        <img src="https://hodlinfo.com/static/media/HODLINFO.8f78fc06.png" alt="" width="200" height="50" class="d-inline-block align-text-top">
      </a>
    </div>
  </nav>
  <div class="container my-5">
    <div class="container text-center">
      <h3 class="text-muted">Best Price To Trade</h3>
      <% let sum = 0 %>
      <% for(let avg of average) { %>
      <% sum += avg.last / average.length %>
      <% } %>
      <h1 style="color: aqua;">
        ₹ <%= parseInt(sum).toLocaleString("en-IN") %>
      </h1>
      <p class="text-muted">Average BTC/INR net price including commission</p>
      <table class="table">
        <thead>
          <thead>
            <tr>
              <th scope="col" class="text-muted">#</th>
              <th scope="col" class="text-muted">Name</th>
              <th scope="col" class="text-muted">Last</th>
              <th scope="col" class="text-muted">Buy/Sell Price</th>
              <th scope="col" class="text-muted">High</th>
              <th scope="col" class="text-muted">Low</th>
            </tr>
          </thead>
        <tbody>
          <% coins.reverse().forEach((coin, i) => { %>
          <tr>
            <th scope="row" id="count"><%= i+1 %></th>
            <td>
              <h5><%= coin.name %></h5>
            </td>
            <td>
              <p> ₹<%= coin.last %></p>
            </td>
            <td>
              <p>₹<%= coin.buy %>/ ₹<%= coin.sell %></p>
            </td>
            <td>
              <p> <%= coin.high %></p>
            </td>
            <td>
              <p> <%= coin.low %></p>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
